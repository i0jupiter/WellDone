<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/cardOuterStroke" />
            <corners
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/cardInnerStroke" />
            <corners
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="0dp">
        <shape>
            <solid android:color="@color/cardFill" />
            <corners
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp" />
        </shape>
    </item>
</layer-list>
