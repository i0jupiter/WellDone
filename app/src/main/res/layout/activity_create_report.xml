<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepath.welldone.activity.CreateReportActivity">

    <ImageView
        android:id="@+id/ivFixedPump"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@android:drawable/screen_background_light_transparent"
        android:contentDescription="@android:color/transparent" />

   <TextView
       android:id="@+id/tvReportDateLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ivFixedPump"
       android:layout_marginTop="10dp"
       android:layout_alignLeft="@+id/ivFixedPump"
       android:hint="@string/report_date_label" />

    <TextView
        android:id="@+id/tvReportDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvReportDateLabel"
        android:layout_alignRight="@+id/ivFixedPump"
        android:hint="@string/report_date_date" />

    <TextView
        android:id="@+id/tvReportNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReportDateLabel"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/ivFixedPump"
        android:hint="@string/report_name_label" />

    <TextView
        android:id="@+id/tvReportName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvReportNameLabel"
        android:layout_alignRight="@+id/ivFixedPump"
        android:hint="@string/report_name_name" />

    <!-- XXX fix the font of the spinner to match the page -->
    <Spinner
        android:id="@+id/spPumpStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReportName"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/ivFixedPump"
        android:prompt="@string/pump_status_prompt"
        android:entries="@array/pump_status_options">
    </Spinner>

    <TextView
        android:id="@+id/tvPumpStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spPumpStatus"
        android:layout_alignLeft="@+id/ivFixedPump"
        android:hint="@string/pump_status_label" />

    <TextView
        android:id="@+id/tvReportNotesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPumpStatusLabel"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/ivFixedPump"
        android:hint="@string/report_notes_label" />

    <EditText
        android:id="@+id/etReportNotes"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:scrollbars="vertical"
        android:layout_alignLeft="@+id/ivFixedPump"
        android:layout_alignRight="@+id/ivFixedPump"
        android:layout_below="@+id/tvReportNotesLabel"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:hint="@string/report_notes_note"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnSubmitReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etReportNotes"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="@string/submit_report" />

</RelativeLayout>
